<Navigationbar@Button>
    font_size: 14
    height: 28
    background_color: (0.97, 0.4, 0.7, 1.0)
    color: 1,1,1,1
    bold: True
    canvas.before:
        Color:
            rgb: .5, .5, .5, 1
        Line:
            width: 4
            rectangle: self.x, self.y, self.width, self.height




